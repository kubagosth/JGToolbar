                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Resources>

    <Border Background="#FF33373C" CornerRadius="8" Padding="05" Margin="0,0,0,0">
        <StackPanel Orientation="Horizontal">
            <Button Content="CMD" Margin="5" Height="25" Width="30" Click="OpenCommandPrompt_Click"/>
            <Button Margin="5" Width="25" Height="25" ToolTip="GitHub" Click="Git_Click">
                <Rectangle Fill="{StaticResource GitHubIconBrush}" Width="20" Height="20"/>
            </Button>
        </StackPanel>
    </Border>
</Window>
